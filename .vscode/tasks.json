{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tauri Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/rust"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Tauri Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tauri", "build"],
      "options": {
        "cwd": "${workspaceFolder}/rust"
      },
      "group": "build"
    },
    {
      "label": "Frontend Dev (Vite)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/rust"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
